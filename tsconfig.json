{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"lib": [
			"ES2020",
			"es6",
			"dom"
		],
		"outDir": "./dist",
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"jsx": "react",
		"esModuleInterop": true,
		"noImplicitAny": false,
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	},
	"exclude": [
		"test"
	]
}